{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo"
  },
  // Explicitly add files to satisfy composite mode requirements
  // Learn more about the composite mode here: https://www.typescriptlang.org/tsconfig#composite
  "files": [
    "src/index.ts",

    // server
    "src/server/index.ts",
    "src/server/server.config.ts",

    // snippets
    "src/snippets/index.ts",
    "src/snippets/snippet.model.ts",
    "src/snippets/test_snippet_list.data.ts"
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
