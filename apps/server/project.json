{
  "name": "@ai-snippet-service/server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "apps/client/eslint.config.mjs"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/shared/vite.config.ts"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/server",
        "command": "tsx watch src/main.ts"
      },
      "dependsOn": [
        {
          "target": "dev",
          "projects": "@ai-snippet-service/shared"
        }
      ],
      "continuous": true
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "configFile": "apps/server/vite.config.ts",
        "tsConfig": "apps/server/tsconfig.app.json",
        "outputPath": "apps/server/dist"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": ["@ai-snippet-service/shared"]
        }
      ]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/server",
        "command": "node dist/main.js --port=3000"
      },
      "dependsOn": ["^build"],
      "continuous": true
    }
  },
  "implicitDependencies": ["@ai-snippet-service/shared"],
  "tags": ["scope:backend"]
}
